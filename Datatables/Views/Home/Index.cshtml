<script>

    var minDate, maxDate;
    // dördüncü sütundaki verileri (Tarihlerin olduğu sütün) iki değer arasında arayacak olan Filtreleme İşlevini özelleştirin.
    $.fn.dataTable.ext.search.push(
    function( settings, data, dataIndex ) {
    var min = minDate.val();
    var max = maxDate.val();
    var date = new Date( data[4] );

    if (
    ( min === null && max === null ) ||
    ( min === null && date <= max ) ||
    ( min <= date   && max === null ) ||
    ( min <= date   && date <= max )
    ) {
    return true;
    }
    return false;
    }
    );


